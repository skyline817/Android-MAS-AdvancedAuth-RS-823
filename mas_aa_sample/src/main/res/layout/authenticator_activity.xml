<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:id="@+id/relativelayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/authenticator_provision_relativelayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/layout_dimen_35"
                android:layout_marginTop="@dimen/layout_dimen_10">

                <EditText
                    android:id="@+id/authenticator_provision_userid"
                    android:layout_width="@dimen/layout_dimension_300"
                    android:layout_height="@dimen/layout_dimen_50"
                    android:layout_centerHorizontal="true"
                    android:hint="@string/user_id" />

                <EditText
                    android:id="@+id/authenticator_provision_url"
                    android:layout_width="@dimen/layout_dimension_300"
                    android:layout_height="@dimen/layout_dimen_50"
                    android:layout_below="@id/authenticator_provision_userid"
                    android:layout_centerHorizontal="true"
                    android:hint="@string/pro_url" />

                <EditText
                    android:id="@+id/authenticator_provision_activation_code"
                    android:layout_width="@dimen/layout_dimension_300"
                    android:layout_height="@dimen/layout_dimen_50"
                    android:layout_below="@id/authenticator_provision_url"
                    android:layout_centerHorizontal="true"
                    android:hint="@string/activation_code" />

                <EditText
                    android:id="@+id/authenticator_provision_response"
                    android:layout_width="@dimen/layout_dimension_300"
                    android:layout_height="@dimen/layout_dimen_120"
                    android:layout_below="@id/authenticator_provision_activation_code"
                    android:layout_centerHorizontal="true"
                    android:background="@color/lightGray"
                    android:hint="@string/response_string" />

                <Button
                    android:id="@+id/authenticator_provision_button"
                    android:layout_width="@dimen/layout_dimension_200"
                    android:layout_height="@dimen/layout_dimen_60"
                    android:layout_below="@id/authenticator_provision_response"
                    android:text="@string/register_device" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/getAccountLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/authenticator_provision_relativelayout"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/layout_dimen_35"
                android:layout_marginTop="@dimen/layout_dimen_10">

                <EditText
                    android:id="@+id/get_authenticator_account_userID"
                    android:layout_width="@dimen/layout_dimension_300"
                    android:layout_height="@dimen/layout_dimen_50"
                    android:hint="@string/user_id" />

                <EditText
                    android:id="@+id/get_authenticator_account_response"
                    android:layout_width="@dimen/layout_dimension_300"
                    android:layout_height="@dimen/layout_dimen_120"
                    android:layout_below="@id/get_authenticator_account_userID"
                    android:layout_centerHorizontal="true"
                    android:background="@color/lightGray"
                    android:hint="@string/response_string" />

                <Button
                    android:id="@+id/authenticator_get_account_button"
                    android:layout_width="@dimen/layout_dimension_200"
                    android:layout_height="@dimen/layout_dimen_60"
                    android:layout_below="@id/get_authenticator_account_response"
                    android:text="@string/get_account" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/getAllauthenticatorAccountsLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/getAccountLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/layout_dimen_35"
                android:layout_marginTop="@dimen/layout_dimen_10">

                <EditText
                    android:id="@+id/getAllauthenticatorAccounts_response"
                    android:layout_width="@dimen/layout_dimension_300"
                    android:layout_height="@dimen/layout_dimen_120"
                    android:layout_centerHorizontal="true"
                    android:background="@color/lightGray"
                    android:hint="@string/response_string" />

                <Button
                    android:id="@+id/getAllauthenticatorAccounts_button"
                    android:layout_width="@dimen/layout_dimension_200"
                    android:layout_height="@dimen/layout_dimen_60"
                    android:layout_below="@id/getAllauthenticatorAccounts_response"
                    android:text="@string/get_all_accounts" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/get_all_authenticator_accounts_ns_Layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/getAllauthenticatorAccountsLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/layout_dimen_35"
                android:layout_marginTop="@dimen/layout_dimen_10"
                >

                <EditText
                    android:id="@+id/get_all_authenticator_accounts_ns"
                    android:layout_width="@dimen/layout_dimension_300"
                    android:layout_height="@dimen/layout_dimen_50"
                    android:layout_centerHorizontal="true"
                    android:hint="@string/namespace" />

                <EditText
                    android:id="@+id/get_all_authenticator_accounts_ns_response"
                    android:layout_width="@dimen/layout_dimension_300"
                    android:layout_height="@dimen/layout_dimen_120"
                    android:layout_below="@id/get_all_authenticator_accounts_ns"
                    android:layout_centerHorizontal="true"
                    android:background="@color/lightGray"
                    android:hint="@string/response_string" />

                <Button
                    android:id="@+id/get_all_authenticator_accounts_ns_button"
                    android:layout_width="@dimen/layout_dimension_200"
                    android:layout_height="@dimen/layout_dimen_60"
                    android:layout_below="@id/get_all_authenticator_accounts_ns_response"
                    android:text="@string/get_all_accounts" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/authenticator_removeAccountLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/get_all_authenticator_accounts_ns_Layout"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/layout_dimen_35"
                android:layout_marginTop="@dimen/layout_dimen_10">

                <EditText
                    android:id="@+id/remove_authenticator_account_userID"
                    android:layout_width="@dimen/layout_dimension_300"
                    android:layout_height="@dimen/layout_dimen_50"
                    android:layout_centerHorizontal="true"
                    android:hint="@string/user_id" />

                <EditText
                    android:id="@+id/remove_authenticator_account_response"
                    android:layout_width="@dimen/layout_dimension_300"
                    android:layout_height="@dimen/layout_dimen_120"
                    android:layout_below="@id/remove_authenticator_account_userID"
                    android:layout_centerHorizontal="true"
                    android:background="@color/lightGray"
                    android:hint="@string/response_string" />

                <Button
                    android:id="@+id/remove_authenticator_account_button"
                    android:layout_width="@dimen/layout_dimension_200"
                    android:layout_height="@dimen/layout_dimen_60"
                    android:layout_below="@id/remove_authenticator_account_response"
                    android:text="@string/remove_account" />

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>